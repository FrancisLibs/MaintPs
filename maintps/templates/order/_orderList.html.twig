<div class="row">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th scope="col">Num√©ro</th>
                <th scope="col" class="text-center">Date</th>
                <th scope="col" class="text-center">Fournisseur</th>
                <th scope="col" class="text-center">Designation</th>
                <th scope="col" class="text-center">Utilisateur</th>
                <th scope="col" class="text-center">Montant</th>
                <th scope="col" class="text-center">Date Livraison</th>
                <th scope="col" class="text-center">Statut</th>
            </tr>
        </thead>
        <tbody>
            {% for order in orders %}
                <tr>
                    <th scope="row">
                        <a href="{{ path('order_show', { 'id': order.id }) }}">
                            {% set array = [] %}
                            {% for account in order.account %}
                                {% set array = array|merge([ account.letter ]) %}                             
                            {% endfor %}
                            R2{{ array|join("") }}40-{{ order.orderNumber }}
                        </a>
                    </th>
                    <td class="text-center">{{ order.createdAt|date("m/d/Y") }}</td>
                    <td class="text-center">{{ order.provider.username }}</td>
                    <td class="text-center">{{ order.designation }}</td>
                    <td class="text-center">{{ 
                        order.user.firstName|first 
                        ~ 
                        order.user.lastName|first 
                    }}</td>
                    <td class="text-center">{{ order.expectedAmount }}</td>
                    <td class="text-center">{{ order.expectedDeliveryDate|date("m/d/Y") }}</td>
                    <td class="text-center">{{ order.textStatus }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>