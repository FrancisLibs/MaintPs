{% extends "base.html.twig" %}
{% block body %}
    <div class="container accueil">
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-12">
                        <div class="row mt-5">
                                <div class="col-6 mb-3">
                                    <h3>Commandes en cours...</h3>
                                </div>
                            <div class="col-6">
                                <a class="col-6 btn btn-primary btn-sm" href="{{ path('order_new') }}" role="button">Nouvelle commande</a>
                                <a class="col-4 btn btn-primary btn-sm" href="{{ path('order_list') }}" role="button">Liste</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <table class="table table-striped table-bordered table-hover table-sm col-4">
                            <thead>
                                <tr>
                                    <th scope="col">Numéro</th>
                                    <th class="text-center" scope="col">Date</th>
                                    <th class="text-center" scope="col">Fournisseur</th>
                                    <th class="text-center" scope="col">Montant</th>
                                    <th class="text-center" scope="col">Désignation</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for order in orders %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('order_show', { 'id': order.id }) }}">
                                            {% set array = [] %}
                                            {% for account in order.account %}
                                                {% set array = array|merge([ account.letter ]) %}                             
                                            {% endfor %}
                                            R2{{ array|join("") }}40-{{ order.orderNumber }}
                                            </a>
                                        </td>
                                        <td class="text-center">{{ order.createdat|date("d/m/Y") }}</td>
                                        <td class="text-center">{{ order.provider.username }}</td>
                                        <td class="text-center">{{ order.expectedAmount }}</td>
                                        <td class="text-center">{{ order.designation }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                {{ knp_pagination_render(orders) }}
            </div>
        </div>
    </div>


{% endblock %}