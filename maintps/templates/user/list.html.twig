{% extends 'base.html.twig' %}

{% block title %}Utilisateurs{% endblock %}

{% block body %}
    <main class="container-fluid mt-4">
        <div class="row">
           {# <aside class="col-2">
                <div class="border border-info rounded mt-5">
                    <h3 class="mx-auto mt-1" style="width: 80px; color: white;">Filtres</h3>
                    <form method="post" action="{{path('order_filter')}}">
                        <label for="orderNumber">Numéro :</label>
                        <input type="text" name="orderNumber">
                        <input type="submit" value="valider">
                    </form>
                </div>
            </aside> #}
            <article class="col-10 offset-2">
                <div class="row">
                    <div class="col-3">
                        <h3>Liste des utilisateurs</h3>
                    </div>
                    <div class="col-2">
                        <a class="btn btn-primary btn-sm" href="{{ path('user_new') }}" role="button">Ajout utilisateur</a>
                    </div>
                </div>
                <div class="row">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th scope="col">Identifiant</th>
                                <th scope="col">Rôles</th>
                                <th scope="col">Email</th>
                                <th scope="col">Téléphone</th>
                                <th scope="col">Prénom</th>
                                <th scope="col">Nom</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.userName }}</td>
                                    <td>{{ 
                                        {% for role in roles %} 
                                            user.role 
                                        {% endfor %}
                                    }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.phoneNumber }}</td>
                                    <td>{{ user.firstName }}</td>
                                    <td>{{ user.lastName }}</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {{ knp_pagination_render(users) }}
            </article> 
        </div>
    </main>

{% endblock %}
